{
  "name": "adroja-dhairya-portfolio",
  "private": true,
  "version": "1.0.0",
  "description": "Adroja Dhairya's Full Stack Developer Portfolio - A terminal-themed showcase of projects and skills",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "analyze": "vite build --mode analyze",
    "deploy": "vite build && vercel --prod"
  },
  "keywords": [
    "portfolio",
    "svelte",
    "sveltekit",
    "full-stack",
    "developer",
    "terminal",
    "typescript"
  ],
  "author": "Adroja Dhairya",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "5.7.3",
    "vite": "^6.2.6",
    "vite-plugin-devtools-json": "^0.2.0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0"
  }
}
